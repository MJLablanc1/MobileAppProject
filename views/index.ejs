<div data-role="page" id="Timer">

            <div data-role="header" data-theme='b'> 
            <h1>Practice Tracker</h1>
               <div data-role="navbar">
                     <ul>
                        <li><a href="#Schedule" data-icon="calendar">Schedule</a></li>
                        <li><a href="#Welcome" data-icon="forward">Welcome</a></li>
                        <li><a href="#Home" data-icon="clock">Home</a> </li>
                     </ul>
                  </div>

            </div>
    
            <div data-role="content" data-theme='d'>
               <h2 id= "title">Timer</h2>
               <div>
                  Activity <input type=text id=activity>
               </div>

               <div>
                  <h1>Stopwatch</h1>
                  <span id="sw_h">00</span>:
                  <span id="sw_m">00</span>:
                  <span id="sw_s">00</span>:
                  <span id="sw_ms">00</span>
                  <br/>
                  <br/>
                  <input type="button" value="Start" id="sw_start" />
                  <input type="button" value="Pause" id="sw_pause" />
                  <input type="button" value="Stop"  id="sw_stop" />
                  <input type="button" value="Reset" id="sw_reset" />
               </div>               

            </div>
    
            <div data-role="footer"  data-theme='b'>
                <h1>Lablanc inc.</h1>
            </div>
    
</div>

