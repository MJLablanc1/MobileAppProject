<div data-role="page" id="Schedule">

            <div data-role="header" data-theme='b'> 
            <h1>Practice Tracker</h1>
               <div data-role="navbar">
                     <ul>
                         <li><a href="#Home" data-icon="home">Home</a></li>
                         <li><a href="#Welcome" data-icon="forward">Welcome</a></li>
                         <li><a href="#Timer" data-icon="clock">Timer</a> </li>
                     </ul>
                  </div>

            </div>    
            <div data-role="content" data-theme='d'>
               <h2 id= "title">Calender</h2>
               <p>Date: <input type="text" id="datepicker"></p>
            </div>
            
            <div data-theme='d'>
               Activity <input type=text id=activity> <br/>
               Time <input type="datetime" id=time>
            </div>
    
            <div data-role="footer"  data-theme='b'>
                <h1>Lablanc inc.</h1>
            </div>
    
</div>


